{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",

    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "incremental": true,

    "types": [ "node" ],
    "paths": {
      "@/*": [ "front-end/*" ],
      "$/*": [ "back-end/*" ]
    },
    "lib": [ "esnext", "dom", "dom.iterable", "scripthost" ]
  },
  "exclude": ["node_modules", "dist", "**/*spec.ts"]
}
